    <script type="text/javascript">
    var idElm=document.getElementById('header_1'); // getElementById만 Element이다 
    idElm.style.color='red';
    classElm= document.getElementsByClassName('header_2');
    classElm[0].style.color='yellow';
    var nameElm=document.getElementsByName('tagA');
    nameElm[0].style.color='blue';
    var tagName=document.getElementsByTagName('H1');
    tagName[0].style.fontSize='15px';
    var selElm=document.querySelector('.header_2');
    selElm.style.backgroundColor="#000000";
    var selAllElm=document.querySelectorAll('H1');
    selAllElm[0].style.backgroundColor="#0000f0";
    </script>
